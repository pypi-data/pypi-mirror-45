<tool id="Sum" name="Sum numbers" version="1.0">
  <description>Add two numbers together.</description>
  <authors>
    <author name="Hakim Achterberg" email="h.achterberg@erasmusmc.nl" url="http://www.bigr.nl/people/HakimAchterberg" />
  </authors>
  <command version="1.0" url="">
    <targets>
      <target os="*" arch="*" interpreter="python" paths='./bin' bin="sum.py" />
    </targets>
    <description>
        sum.py --in value_1 value_2 ... value_n -> sum
    </description>
    <authors>
      <author name="Hakim Achterberg" email="h.achterberg@erasmusmc.nl" url="http://www.bigr.nl/people/HakimAchterberg" />
    </authors>
  </command>
  <repository />
  <interface>
    <inputs>
      <input id="values" name="list of values to sum" datatype="Number" prefix="--in" cardinality="1-*" repeat_prefix="false" required="true" />
    </inputs>
    <outputs>
      <output id="result" name="output value" datatype="Number" automatic="True" cardinality="1" method="json" location="^RESULT=(.+)$">
          <description>The summation of list of values</description>
      </output>
    </outputs>
  </interface>
  <requirements />
  <tests />
  <help>
    RTFM! =]
  </help>
  <cite>
  </cite>
  <references />
</tool>
