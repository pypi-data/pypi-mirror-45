<tool id="Divide" name="Divide two numbers" version="1.0">
  <description>Divide two numbers together.</description>
  <authors>
    <author name="Marcel Koek" email="m.koek@erasmusmc.nl" url="http://www.bigr.nl/people/MarcelKoek" />
  </authors>
  <command version="1.0" url="">
    <targets>
      <target os="*" arch="*" interpreter="python" paths="./bin" bin="divide.py" />
    </targets>
    <description>
      divide.py value1 value2
      output = value1 + value2
    </description>
    <authors>
      <author name="Marcel Koek" email="m.koek@erasmusmc.nl" url="http://www.bigr.nl/people/MarcelKoek" />
    </authors>
  </command>
  <repository />
  <interface>
    <inputs>
      <input id="left_hand" name="left hand value" datatype="Number" prefix="--in1" cardinality="1-*" repeat_prefix="false" required="true" />
      <input id="right_hand" name="right hand value" datatype="Number" prefix="--in2" cardinality="as:left_hand" repeat_prefix="false" required="true" />
    </inputs>
    <outputs>
      <output id="result" name="resulting value" datatype="Number" automatic="True" cardinality="as:left_hand" method="json" location="^RESULT=(.+)$">
        <description>The division of 2 values.</description>
      </output>
    </outputs>
  </interface>
  <requirements />
  <tests />
  <help>
    RTFM! =]
  </help>
  <cite>
  </cite>
  <references />
</tool>
