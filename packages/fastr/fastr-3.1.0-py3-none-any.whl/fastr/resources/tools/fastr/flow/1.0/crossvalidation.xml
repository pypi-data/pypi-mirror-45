<tool id="CrossValidation" name="CrossValidate a number of items" version="1.0"  class="AdvancedFlowNode">
  <description>Add two numbers together.</description>
  <authors>
    <author name="Hakim Achterberg" email="hakim.achterberg@gmail.com" url="http://www.bigr.nl/people/HakimAchterberg" />
  </authors>
  <command version="1.0" url="">
    <targets>
      <target os="*" arch="*" interpreter="python" paths="./" bin="CrossValidation" />
    </targets>
    <description>
    </description>
    <authors>
      <author name="Hakim Achterberg" email="hakim.achterberg@gmail.com" url="http://www.bigr.nl/people/HakimAchterberg" />
    </authors>
  </command>
  <interface class="FlowInterface">
    <inputs>
      <input id="items" name="items to cross-validate" datatype="AnyType" prefix="--items" cardinality="1-*" repeat_prefix="false" required="true" />
      <input id="method" name="cross-validation method" prefix="--method" cardinality="1" repeat_prefix="false" required="true">
          <enum>KFold</enum>
      </input>
      <input id="number_of_folds" name="number of folds" datatype="Int" prefix="--number_of_folds" cardinality="1" repeat_prefix="false" required="false" />
    </inputs>
    <outputs>
      <output id="train" name="train data" datatype="AnyType" automatic="True" cardinality="unknown" method="json" location="^RESULT_TRAIN=(.+)$" />
      <output id="test" name="test data" datatype="AnyType" automatic="True" cardinality="unknown" method="json" location="^RESULT_TEST=(.+)$" />
    </outputs>
  </interface>
