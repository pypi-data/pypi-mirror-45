<tool id="PassThroughAuto" name="PassThroughAuto" version="1.0">
  <description>Create a range of values until int similar to python range(x).</description>
  <authors>
    <author name="Hakim Achterberg" email="h.achterberg@erasmusmc.nl" url="http://www.bigr.nl/people/HakimAchterberg" />
  </authors>
  <command version="1.0" url="">
    <targets>
      <target os="*" arch="*" interpreter="python" paths="./bin" bin="passthroughauto.py" />
    </targets>
    <description>
      python passthroughauto.py --infile test.txt --outdir /path/to/output_dir/
    </description>
    <authors>
      <author name="Hakim Achterberg" email="h.achterberg@erasmusmc.nl" url="http://www.bigr.nl/people/HakimAchterberg" />
    </authors>
  </command>
  <repository />
  <interface>
    <inputs>
      <input id="input_file" name="Input file" datatype="TxtFile" prefix="--infile" cardinality="1" required="true" />
    </inputs>
    <outputs>
      <output id="directory" name="output directory" datatype="Directory" action="ensure" prefix="--outdir"
              cardinality="1" required="true"/>
      <output id="output_file" name="Output file" datatype="TxtFile" cardinality="1" automatic="true"
              location="{output.directory[0]}/{input.input_file[0].filename}" method="path"/>
    </outputs>
  </interface>
  <requirements />
  <tests />
  <help>
    RTFM! =]
  </help>
  <cite>
  </cite>
  <references />
</tool>
