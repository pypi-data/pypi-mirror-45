<tool id="StdOut" name="Get some output from the stdout." version="1.0">
  <description>Delay before copying the input and the output.</description>
  <authors>
    <author name="Marcel Koek" email="m.koek@erasmusmc.nl" url="http://www.bigr.nl/people/MarcelKoek" />
  </authors>
  <command version="1.0" url="">
    <targets>
      <target os="*" arch="*" interpreter="python" paths="./bin" bin="stdout.py" />
    </targets>
    <description>
      python delay.py --in filename --out filename
      output = input
    </description>
    <authors>
      <author name="Marcel Koek" email="m.koek@erasmusmc.nl" url="http://www.bigr.nl/people/MarcelKoek" />
    </authors>
  </command>
  <repository />
  <interface>
    <inputs>
      <input id="value" name="Input image file" datatype="Number" prefix="--in" cardinality="1" repeat_prefix="false" required="true" />
    </inputs>
    <outputs>
      <output id="result" name="Output image file" datatype="Number" prefix="--out" cardinality="2"
              automatic="true" method="stdout" location="(.*)" separator=" ">
        <description>A copy of the input and two time the input.</description>
      </output>
    </outputs>
  </interface>
  <requirements />
  <tests />
  <help>
    RTFM! =]
  </help>
  <cite>
  </cite>
  <references />
</tool>
