<tool id="AutoPrefixTest" name="Have an automatic output with a boolean flag prefix." version="1.0">
  <description>Have an automatic output with a boolean flag prefix.</description>
  <authors>
    <author name="Adriaan Versteeg" email="a.bersteeg@erasmusmc.nl" url="http://www.bigr.nl/people/AdriaanVersteeg" />
  </authors>
  <command version="1.0" url="">
    <targets>
      <target os="*" arch="*" interpreter="python" paths="./bin" bin="auto_prefix.py" />
    </targets>
    <description>
      python fail.py --in1 fake_input --in2 --out1 filename --out2 fake output --fail1 --fail2
      output = input
    </description>
    <authors>
      <author name="Hakim Achterberg" email="h.achterberg@erasmusmc.nl" url="http://www.bigr.nl/people/HakimAchterberg" />
    </authors>
  </command>
  <repository />
  <interface>
    <inputs>
      <input id="left_hand" name="Input image file" datatype="Int" prefix="--in1" cardinality="1" repeat_prefix="false" required="true" />
      <input id="right_hand" name="Input image file" datatype="Int" prefix="--in2" cardinality="1" repeat_prefix="false" required="true" />
    </inputs>
    <outputs>
      <output id="added" name="The addition of the inputs" datatype="Int" automatic="True" cardinality="1" method="json" location="^ADD=(.*)$"/>
      <output id="multiplied" name="The multiplication of the inputs" datatype="Int" automatic="True" prefix="--mult" cardinality="1" method="json" location="^MULT=(.*)$"/>
    </outputs>
  </interface>
  <requirements />
  <tests />
  <help>
    RTFM! =]
  </help>
  <cite>
  </cite>
  <references />
</tool>